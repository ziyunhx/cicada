@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model Cicada.ViewModels.Common.Search

<form asp-controller="@Model.Controller" asp-action="@Model.Action" method="get" class="from-search">
    <div class="col-sm-12 col-md-6">
        <div class="dataTables_length" id="dataTable_length">
            <a asp-action="@Model.AddEntityUrl" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">@Model.AddEntityLabel</span>
            </a>
            &nbsp;&nbsp;&nbsp;
            <label>
                Show
                <select asp-for="PageSize" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                entries
            </label>
        </div>
    </div>
    <div class="col-sm-12 col-md-6">
        <div id="dataTable_filter" class="dataTables_filter">
            <!-- Topbar Search -->
            <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <div class="input-group">
                    <input name="search" type="text" value="@ViewBag.Search" class="form-control bg-light small" placeholder="@Localizer["InputSearchPlaceHolder"]" aria-label="Search" aria-describedby="dataTable">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>